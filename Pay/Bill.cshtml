<section id="main-content">
<section class="wrapper">
  <div class="row">
                    <div class="col-lg-12">
                        <section class="panel">
                            <header class="panel-heading">
                           صورتحساب
                            </header>
                            <div class="panel-body">
                                <div class="col-lg-12">
                                     <form role="form" Method = "POST"  id="sell-form-data" action="OffCode" class="form-horizontal tasi-form">
                                    <div class="form-group ">
                                        <label class="col-lg-2 control-label">کد تخفیف</label>
                                        <div class="col-lg-6">
                                        <div class="input-group input-group-lg m-bot15">
                                        <input type="text" class="form-control input-lg" placeholder="کد" name="code">
                                            </div>
                                        </div>
                                        <div class=" col-lg-4">
                                            <button class="btn btn-danger" id="sell-btn-submit" type="submit">ثبت</button>
                                        </div>
                                    </div>
                                </form>
                        <section class="panel">
                          <div class="panel-body progress-panel">
                              <div class="task-progress">
                                  <h1>سفارش های در انتظار تایید</h1>
                              </div>
                          </div>
                          <table class="table table-hover personal-task">
                              <tbody>
                                  <tr>
                                      <td>شماره</td>
                                      <td>نام محصول</td>
                                      <td>مبلغ</td>
                                  </tr>
                                  @if(ViewBag.panelData!=null){
                              <tr>
                                  <td>۱</td>
                                  <td>
                                     @ViewBag.panelData.name
                                  </td>
                                  <td>@ViewBag.panelData.amount</td>
                              </tr>
                                  }
                                      @if(ViewBag.offCodeData!=null){
                              <tr>
                                  <td>۲</td>
                                  <td>
                                     کد تخفیف
                                  </td>
                                  <td>@ViewBag.offCodeData.amount</td>
                              </tr>
                                  }
                              </tbody>
                          </table>
                      </section>
                       @if(ViewBag.panelData!=null){
                      <div style="margin-top=20px;float:right;">
                          <h3>
                          <div class="alert alert-success">
                            <strong>جمع کل:</strong> @ViewBag.finalPanelAmount
                            </div>
                      </h3>
                      </div>
                       }
                      </div>
                                <div class="col-lg-offset-4 col-lg-10">
                                        <br/>
                                         @if(ViewBag.panelData!=null){
                                             <form id="create_pay_request" method="Get" action="CreatePay">
                                        <a class="btn btn-lg btn-primary" style="width:200px;height:50px;margin-right:20px;margin-bottom:20px;" id="create_pay_btn" >
                                         پرداخت
                                        </a>
                                        </form>
                                         }
                                </div>
                            </div>
                        </section>
                    </div>
  </div>
</section>
</section>
<script >
$('#create_pay_btn').confirm({
    title:"هشدار",
    content:"از انچام این عملیات مطمئن هستید؟",
    buttons:{
    بله:function(button){
        $("#create_pay_request").submit();
    },
     خیر: function(button) {
    }}
});
</script>