@{ViewData["titleHeader"] = "update Panel";}
<section id="main-content">
<section class="wrapper">


 <div class="col-lg-12">
                        <section class="panel">
                            <header class="panel-heading">
                               ویرایش پنل 
                            </header>
                              <div class="panel-body">
                                    <div class="panel-body">
                            <div class="row">
                  <div class="col-lg-12" style="margin-top:20px">
                        <section class="panel">
                          <table class="table table-hover personal-task" id="productList">
                              <tbody>
                                  <tr>
                                      <td>نام </td>
                                      <td>قیمت</td>
                                      <td>وضعیت</td>
                                  </tr>
                                  @if(ViewBag._master_Option_Tabel!=null){
                                  @foreach (var item in ViewBag._master_Option_Tabel)
                                  {
                              <tr>
                                  <td>
                                      @item.name
                                  </td>
                                  <td>
                                      @item.amount
                                  </td>
                                   @if(item.status){
                                        <td class="center hidden-phone"><a class="btn btn-md btn-primary display-4" href="~/setting/ChangeStatus/@item.id">فعال</a></td>
                                    }else{
                                        <td class="center hidden-phone"><a class="btn btn-md btn-warning display-4" href="~/setting/ChangeStatus/@item.id">غیر فعال</a></td>
                                    }
                              </tr>
                                  }
                                  }
                              </tbody>
                          </table>
                      </section>
                      </div>
                      </div>
                            </div>
                              </div>
                        </section>
                       

                       
 </div>


</section>
