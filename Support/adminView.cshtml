<script src="//cdn.ckeditor.com/4.12.1/standard/ckeditor.js"></script>
<section id="main-content">
<section class="wrapper">
  <div class="row">
                    <div class="col-lg-12">
                        <section class="panel">
                            <header class="panel-heading">
                              پشتیبانی #@ViewBag.id
                            </header>
                            <div class="panel-body">
                                <div  class="form-horizontal tasi-form">
                                    <div class="form-group ">
                                        <label class="col-lg-1 control-label">موضوع</label>
                                        <div class="col-lg-2">
                                            <div class=" input-group-lg m-bot15">
                                            <input type="text" placeholder="@ViewBag.subject" id="l-name" class="form-control input-lg" name="text_subject" disabled >
                                            </div>
                                        </div>
                                        <label class="col-lg-1 control-label">تاریخ ثبت</label>
                                        <div class="col-lg-2">
                                            <div class=" input-group-lg m-bot15">
                                            <input type="text" placeholder="@ViewBag.createTime" id="l-name" class="form-control input-lg" name="text_subject" disabled >
                                            </div>
                                        </div>
                                         <label class="col-lg-1 control-label">تاریخ پاسخ</label>
                                        <div class="col-lg-2">
                                            <div class=" input-group-lg m-bot15">
                                            <input type="text" placeholder="@ViewBag.answerTime" id="l-name" class="form-control input-lg" name="text_subject" disabled >
                                            </div>
                                        </div>
                                        <label class="col-lg-1 control-label">نام کاربری</label>
                                        <div class="col-lg-2">
                                            <td class="hidden-phone"><a class="btn btn-info" href="~/account/user/@ViewBag.userCode">@ViewBag.userCode</a></td>
                                        </div>
                                    </div>
                                     <div class="form-group">
                                                    <label class="control-label col-sm-2">پیام</label>
                                                    <div class="col-sm-10">
                                                        <div class="form-control ">
                                                        @ViewBag.message
                                                        </div>
                                                    </div>
                                     </div>
                                     <form role="form" Method = "POST"  id="sell-form-data" class="form-horizontal tasi-form">
                                     <input type="text" class="hidden" name="id" value="@ViewBag.id" />
                                     <div class="form-group">
                                                    <label class="control-label col-sm-2">پاسخ</label>
                                                    <div class="col-sm-10">
                                                        <textarea  class="form-control "  name="message" rows="8" >@ViewBag.answer</textarea>
                                                    </div>
                                                    <script>
                                                    CKEDITOR.replace( 'message' , {
                                                        contentsLangDirection: 'rtl'
                                                        } );
                                                    </script>
                                                    
                                    </div>
                                    <div class="form-group">
                                        <div class="col-lg-offset-2 col-lg-10">
                                            <button class="btn btn-danger" id="sell-btn-submit" type="submit">ثبت</button>
                                        </div>
                                     </div>
                                    </form>
                                    
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
    </section>
</section>
