<script src="//cdn.ckeditor.com/4.12.1/standard/ckeditor.js"></script>
<section id="main-content">
<section class="wrapper">
  <div class="row">
                    <div class="col-lg-12">
                        <section class="panel">
                            <header class="panel-heading">
                              پشتیبانی
                            </header>
                            <div class="panel-body">
                                @if(!User.IsInRole("admin")){
                                    <form role="form" Method = "POST"  id="sell-form-data" class="form-horizontal tasi-form">
                                    <div class="form-group ">
                                        <label class="col-lg-2 control-label">موضوع</label>
                                        <div class="col-lg-10">
                                            <div class=" input-group-lg m-bot15">
                                            <input type="text" placeholder="موضوع" id="l-name" class="form-control input-lg" name="text_subject" >
                                            </div>
                                        </div>
                                    </div>
                                     <div class="form-group">
                                                    <label class="control-label col-sm-2">پیام</label>
                                                    <div class="col-sm-10">
                                                        <textarea  class="form-control ckeditor"  name="text_content" rows="8"></textarea>
                                                    </div>
                                     </div>
                                     <script>
                                        CKEDITOR.replace( 'text_content' , {
                                                        contentsLangDirection: 'rtl'
                                                        } );
                                    </script>
                                    <div class="form-group">
                                        <div class="col-lg-offset-2 col-lg-10">
                                            <button class="btn btn-danger" id="sell-btn-submit" type="submit">ثبت</button>
                                        </div>
                                    </div>
                                </form>
                                }else{
                                    <form role="form" Method = "POST" action="adminindex"  id="sell-form-data" class="form-horizontal tasi-form">
                                    <div class="form-group ">
                                        <label class="col-lg-2 control-label">موضوع</label>
                                        <div class="col-lg-10">
                                            <div class=" input-group-lg m-bot15">
                                            <input type="text" placeholder="موضوع" id="l-name" class="form-control input-lg" name="text_subject" >
                                            </div>
                                        </div>
                                    </div>
                                     <div class="form-group">
                                                    <label class="control-label col-sm-2">پیام</label>
                                                    <div class="col-sm-10">
                                                        <textarea  class="form-control ckeditor"  name="text_content" rows="8"></textarea>
                                                    </div>
                                     </div>
                                     <script>
                                        CKEDITOR.replace( 'text_content' , {
                                                        contentsLangDirection: 'rtl'
                                                        } );
                                    </script>
                                    <div class="form-group">
                                        <div class="col-lg-offset-2 col-lg-10">
                                            <button class="btn btn-danger" id="sell-btn-submit" type="submit">ثبت</button>
                                        </div>
                                    </div>
                                </form>
                                }
                            </div>
                        </section>
                    </div>
                </div>
    </section>
</section>
