<script src="//cdn.ckeditor.com/4.12.1/standard/ckeditor.js"></script>
<section id="main-content">
<section class="wrapper">
  <div class="row">
                    <div class="col-lg-12">
                        <section class="panel">
                            <header class="panel-heading">
                              پشتیبانی #@ViewBag.id
                            </header>
                            <div class="panel-body">
                                <div  class="form-horizontal tasi-form">
                                    <div class="form-group ">
                                        <label class="col-lg-1 control-label">موضوع</label>
                                        <div class="col-lg-3">
                                            <div class=" input-group-lg m-bot15">
                                            <input type="text" placeholder="@ViewBag.subject" id="l-name" class="form-control input-lg" name="text_subject" disabled >
                                            </div>
                                        </div>
                                        <label class="col-lg-1 control-label">تاریخ ثبت</label>
                                        <div class="col-lg-3">
                                            <div class=" input-group-lg m-bot15">
                                            <input type="text" placeholder="@ViewBag.createTime" id="l-name" class="form-control input-lg" name="text_subject" disabled >
                                            </div>
                                        </div>
                                         <label class="col-lg-1 control-label">تاریخ پاسخ</label>
                                        <div class="col-lg-3">
                                            <div class=" input-group-lg m-bot15">
                                            <input type="text" placeholder="@ViewBag.answerTime" id="l-name" class="form-control input-lg" name="text_subject" disabled >
                                            </div>
                                        </div>
                                    </div>
                                     <div class="form-group">
                                                    <label class="control-label col-sm-2">پیام</label>
                                                    <div class="col-sm-10">
                                                        <textarea  class="form-control "  name="text_content" rows="8" disabled>@ViewBag.message</textarea>
                                                    </div>
                                     </div>
                                     <div class="form-group">
                                                    <label class="control-label col-sm-2">پاسخ</label>
                                                    <div class="col-sm-10">
                                                        <textarea  class="form-control "  name="text_content" rows="8" disabled>@ViewBag.answer</textarea>
                                                    </div>
                                     </div>
                                    
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
    </section>
</section>
