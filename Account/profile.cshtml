@{
ViewData["titleHeader"]="پروفایل";
}
  <section id="main-content">
            <section class="wrapper">
                <!-- page start-->
                <div class="row">
                    <aside class="profile-nav col-lg-3">
                        <section class="panel">
                            <div class="user-heading round">
                                <h1>@ViewBag.username</h1>
                                <p>@ViewBag.email</p>
                            </div>

                            <ul class="nav nav-pills nav-stacked">
                                <li><a href="~/account/profile"><i class="icon-user"></i>پروفایل</a></li>
                                <li><a href="~/account/changePassword"><i class="icon-edit"></i>تغییر رمز ورود</a></li>
                            </ul>

                        </section>
                    </aside>
                    <aside class="profile-info col-lg-9">
                        
                        <section class="panel">
                            <div class="bio-graph-heading">
                               اطلاعات حساب کاربری
                         
                            </div>
                            <div class="panel-body bio-graph-info">
                                <div class="row">
                                    <div class="bio-row">
                                        <p><span>نام پنل</span>: @ViewBag.panelName</p>
                                    </div>
                                    <div class="bio-row">
                                        <p><span>زمان عضویت </span>: @ViewBag.createTime</p>
                                    </div>
                                    <div class="bio-row">
                                        <p><span>کد امنیتی ورود </span>: @ViewBag.securityCode</p>
                                    </div>
                                    <div class="bio-row">
                                        <p><span>بلاک هستید؟</span>: @ViewBag.isBlock</p>
                                    </div>
                                    <div class="bio-row">
                                        <p><span>تعداد کل تیکت ها </span>: @ViewBag.ticketCount</p>
                                    </div>
                                    <div class="bio-row">
                                        <p><span>ادمین هستید؟</span>: @ViewBag.isAdmin</p>
                                    </div>
                                    <div class="bio-row">
                                     
                                        <p><span>تعداد کل درخواست ها</span>: @ViewBag.requestCount</p>
                                    </div>
                                </div>
                            </div>
                        </section>
                        
                    </aside>
                </div>

                <!-- page end-->
            </section>
        </section>
        <!--main content end-->